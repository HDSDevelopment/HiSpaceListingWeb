				<div class="row">
					<div class="col-sm-12 mt-4 text-center">
						<button type="button" id="rtn-apply-btn" class="btn btn-primary btn-sm" onclick="returnCalculation(1);">Apply</button>
					</div>
				</div>
			</div>
		</section>

	<section class="mb-4">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="mb-3">
