
@model HiSpaceListingModels.Investor
@{
	ViewData["Title"] = "Investor return calculation page for Property, Operator, ReProfessionals";
	ViewData["canonical"] = "https://www.thehispace.com/Investor/InvestorReturns";
	ViewData["robots"] = "index, follow, noarchive";
	ViewData["keywords"] = "Home For Property, Operator, ReProfessionals";
	ViewData["description"] = "To find the investment returns calculation on your valuable assert. It will show the returns calculation based on out formula and future estimations";
	Layout = "~/Views/Shared/_WebLayout.cshtml";
	@using Microsoft.AspNetCore.Http
}

<div class="investor-returns nav-padding">
	<h1 class="display-none">The Hispace investor returns calculation</h1>
	<div class="bg-light">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<ol class="breadcrumb mb-0">
						<li class="breadcrumb-item"><a href="@Url.Action("Index", "Website")"> <i class="fas fa-home"></i> </a></li>

						<li class="breadcrumb-item active"> <i class="fas fa-chevron-right"></i> <span> Investor Returns Calculator </span></li>
					</ol>
				</div>
			</div>
		</div>
	</div>

	<section class="bg-texture-1">
		<div class="container">
			<div class="texture-head">
				Looking for real estate investment avenues? Provide us your contact information and very few details here. Hi Space team will reach out to you
			</div>
			<div class="texture-btn">
				<a class="nav-link btn btn-sec d-inline-block" href="@Url.Action( "CreateInvestor","Investor")">Investor Form</a>
			</div>
		</div>
	</section>
	<section class="mb-4">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="mt-3 mb-4">
						<h2>Return Calculator</h2>
					</div>
				</div>
			</div>
			<div class="row rtn-form">
				<div class="col-sm-4 rtn-form__div" id="rtn-form__div">
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="rtn_investment">
								Investment*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Maximum amount you are willing to invest">?</span>
							</label>
							<input type="number" class="form-control" id="rtn_investment" name="rtn_investment" placeholder="1000000">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-6">
							<label for="rtn_noi">
								Expected NOI*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Expected annual Profit (Revenues minus Expenses) amount">?</span>
							</label>
							<input type="number" class="form-control" id="rtn_noi" name="rtn_noi" placeholder="10000">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-12">
							<label for="rtn_cap">
								Estimated CapEx or TI thru Hold
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Expected Capital Expenditure like huge building repairs etc.">?</span>
							</label>
							<input type="number" class="form-control" id="rtn_cap" name="rtn_cap" placeholder="10000">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-6">
							<label for="rtn_inflation">
								Inflation*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Yearly inflation % (eg. 7%)">?</span>
							</label>
							<input type="number" class="form-control percent-float inpct" id="rtn_inflation" name="rtn_inflation" placeholder="0.00">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-6">
							<label for="rtn_ltv">
								Loan to Value(LTV)
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Percentage of property value that can be availed as Loan amount (eg. 70%)">?</span>
							</label>
							<input type="number" class="form-control percent-float inpct" id="rtn_ltv" name="rtn_ltv" placeholder="0.00">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-12 intrest-rate d-none">
							<label for="rtn_intrest">
								Interest Rate*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Interest rate that the banks charge for the loan (eg. 9.5%)">?</span>
							</label>
							<input type="number" class="form-control percent-float inpct" id="rtn_intrest" name="rtn_intrest" placeholder="0.00">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-6">
							<label for="rtn_period">
								Holding Period (Years)*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Number of years you want to hold the property (eg. 5 years)">?</span>
							</label>
							<select class="form-control basic-select" id="rtn_period" name="rtn_period">
								<option value="1">1 Year</option>
								<option value="2">2 Years</option>
								<option value="3">3 Years</option>
								<option value="4">4 Years</option>
								<option value="5">5 Years</option>
							</select>
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-6">
							<label for="rtn_exitmethod">
								Exit Method*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="How to calculate the Resale Value, by using (a) DCF (Discounted Cash Flow) or (b) Direct Capitalisation a) Discounted Cash Flow calculates Resale assuming next 10 years from Exit year b) Direct Capitalisation calculates Resale using Exit + 1 year NOI">?</span>
							</label>
							<select class="form-control basic-select" id="rtn_exitmethod" name="rtn_exitmethod">
								<option value="DCF">DCF</option>
								<option value="Direct Cap">Direct Cap</option>
							</select>
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-12">
							<label for="rtn_exitcap">
								Exit Cap Rate*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Expected rate of return (Capitalisation Rate) to use during Exit; Higher the cap%, lower the value. (eg. 6%)">?</span>
							</label>
							<input type="number" class="form-control percent-float inpct" id="rtn_exitcap" name="rtn_exitcap" placeholder="1.00">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-6">
							<label for="rtn_discount">
								Discount Rate*
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Rate of Risk (eg. 10%)">?</span>
							</label>
							<input type="number" class="form-control percent-float inpct" id="rtn_discount" name="rtn_discount" placeholder="0.00">
							<div class="error" id=""></div>
						</div>
						<div class="form-group col-md-6">
							<label for="rtn_tax">
								Tax Rate
								<span class="tooltip-wrapper" data-toggle="tooltip" data-placement="top" title="" data-original-title="Government Tax Rate (eg. 18%)">?</span>
							</label>
							<input type="number" class="form-control percent-float inpct" id="rtn_tax" name="rtn_tax" placeholder="0.00">
							<div class="error" id=""></div>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12 mt-3 text-center">
							<button type="button" id="rtn-calculate-btn" class="btn btn-primary" onclick="rtnCalcualtionValidate(this,0);">Calculate</button>
						</div>
					</div>
				</div>
				<div class="col-sm-8">
					<div class="mb-3">
						<h4 class="text-center">Cash Flow</h4>
					</div>
					<div id="container" class="div-blur" style="height: 100%">
						@*<div class="chart-blur">

							</div>*@
					</div>
					<div class="chart-sample">Enter values and hit calculate button</div>
				</div>
			</div>
		</div>

	</section>

