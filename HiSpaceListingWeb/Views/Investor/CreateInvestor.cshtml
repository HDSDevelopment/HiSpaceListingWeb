@model HiSpaceListingModels.Investor
@{
	ViewData["Title"] = "Investor";
	Layout = "~/Views/Shared/_WebLayout.cshtml";
	@using Microsoft.AspNetCore.Http
}
@{
	var investor = "";
	if (TempData.ContainsKey("InvestorResult"))
	{
		investor = TempData["InvestorResult"] as string;
	}
}

<!-- Modal -->
<div class="modal message fade" id="investorSuccess" tabindex="-1" role="dialog" aria-labelledby="investorSuccessModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">

		<div class="modal-content">
			<div class="modal-header border-0 bg-sec">
				<h5 class="modal-title" id="investorSuccessModalLabel">Welcome To HiSpace </h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				@if (investor == "Success")
				{
					<p class="text-sec font-weight-bold">Your Investor Details Sent Successfull</p>
				}
				else
				{
					<p class="text-pry font-weight-bold">Your Investor Details was failed!</p>
					<p>Please try again later</p>
				}
			</div>
		</div>

	</div>
</div>

<div class="investor nav-padding">
	<div class="bg-light">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<ol class="breadcrumb mb-0">
						<li class="breadcrumb-item"><a href="@Url.Action("Index", "Website")"> <i class="fas fa-home"></i> </a></li>

						<li class="breadcrumb-item active"> <i class="fas fa-chevron-right"></i> <span> Investor </span></li>
					</ol>
				</div>
			</div>
		</div>
	</div>

	<section class="pt-3">
		<div class="property-btn investor-btn">
			<button class="property-link btn btn-sec">Click to register </button>
		</div>
		<div class="container uix-t-c">
			<div class="row">
				<div class="col-12">
					<div class="section-title">
						<h2>Investor</h2>
						<p>
							We help investors to maximize return with our experience in handling real estate projects, with our strength in analytics and with our ability to run different scenarios before taking key decisions.

						</p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">

					<div class="uix-tabs uix-tabs--rotation row" data-rotation="true" data-rotation-display="3" data-rotation-radius="130" data-rotation-wrapper-angle="90">
						<div class="col-sm-4">
							<div class="uix-tabs__nav">
								<ul>
									<li class="active tabs-show1">
										<a href="javascript:void(0);">
											ACQUISITIONS
										</a>
									</li>
									<li class="tabs-show2">
										<a href="javascript:void(0);">
											ASSET MANAGEMENT
										</a>
									</li>
									<li class="tabs-show3">
										<a href="javascript:void(0);">
											EXIT MANAGEMENT
										</a>
									</li>
								</ul>
							</div><!-- /.uix-tabs__nav -->
						</div>
						<br><br><br><br>
						<div class="col-sm-8">
							<div class="uix-tabs__content active tabs-content1">
								<p class="m-0">
									<b>Identifying Properties:</b> Finding best properties to match investors requirements considering:
								</p>
								<div class="ml-4 mb-3">
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i> <span>Property Type (office, retail etc.,)</span>
									</div>
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i><span>Location (city, sub-urban / mid-town, downtown)</span>
									</div>
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i><span>Return Requirements (core, core +, value add & opportunistic)</span>
									</div>
								</div>
								<p>
									<b>Acquisition Analysis:</b> Analyzing the asset completely to fix the purchase price to get the investor’s desired returns
								</p>
								<p>
									<b>Acquisition Process:</b> Helping investors in bidding process, due diligence process and make sure the best possible chance to acquire the asset
								</p>
							</div>
							<div class="uix-tabs__content tabs-content2">
								<p class="m-0"><b>Leasing:</b></p>
								<div class="ml-4 mb-3">
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i> <span>Finding right tenants for the properties based on asset type, class and requirements. Also, credit checking the tenants before leasing to avoid economic losses</span>
									</div>
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i><span>
											Proactive in leasing to maintain stability in cash flows and always looks for opportunities or ways to improve investors returns with our best leasing capabilities
										</span>
									</div>
								</div>
								<p>
									<b>Maintenance:</b> Forecasting possible major capital expenses and creating escrows to avoid financial burdens. Also minimize operating expenses in all possible ways with better maintenance and planning
								</p>
								<p>
									<b>Development:</b> Analyzing the scope of development/renovation and coordinating with builders and other parties to complete the project within the budget and timeline
								</p>
								<p class="m-0"><b>Reporting:</b></p>
								<div class="ml-4 mb-3">
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i> <span>Periodical Status Reporting (Monthly, Quarterly and Annually or at investor’s demand)</span>
									</div>
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i><span>Business plans</span>
									</div>
									<div class="d-flex align-items-center">
										<i class="fas fa-circle"></i><span>Scenario Analysis & Memos (Net effective rent memos, financing memos, etc.,)</span>
									</div>
								</div>
							</div>
							<div class="uix-tabs__content tabs-content3">
								<p>
									<b>Exit Timing:</b> Monitoring the market continuously and look for the best time to sell the asset to get maximum profit. Our in-depth exit analysis gives clear picture on whether to hold the asset or sell it.

								</p>
								<p>
									<b>Exit Process:</b> We also support the investor in smooth exit process (preparing Teaser, Information Memorandum, Letter Of Indent (LOIs), Sale and Purchase Agreements (SPAs), etc.,)
								</p>
							</div>
						</div>
					</div>
					<!-- .uix-tabs end -->

				</div>

				<div class="col-md-12 investor-div">
