										<div class="error" id=""></div>
									</div>
									<div class="form-group col-md-3 col-sm-6">
										@Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Phone" } })
										<label for="input" class="control-label">Phone*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>
								</div>

								<p class="row">Investment Details:</p>
								<div class="row">
									<div class="form-group col-md-3 col-sm-6">
										<select class="form-control basic-select" id="InvestmentType" name="InvestmentType">
											<option value="">--Select Type--</option>
											<option value="Acquisition">Acquisition</option>
											<option value="Leasing and Maintenance">Leasing/Maintenance</option>
											<option value="selling">selling</option>
										</select>
										<label for="select" class="control-label">Investment Type*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>
									<div class="form-group col-md-3 col-sm-6">
										<select class="form-control basic-select" id="PropertyType" name="PropertyType">
											<option value="">--Select Type--</option>
											<option value="Office">Office</option>
											<option value="Retail">Retail</option>
											<option value="Industrial and Warehouse">Industrial/Warehouse</option>
											<option value="Coworking">Coworking</option>
											<option value="Land">Land</option>
										</select>
										<label for="select" class="control-label">Property Type*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-3 col-sm-6">
										<select class="form-control basic-select" id="Currency" name="Currency">
											<option value="">--Select Type--</option>
											<option value="INR">INR</option>
											<option value="AED">AED</option>
											<option value="USD">USD</option>
										</select>
										<label for="select" class="control-label">Currency*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>

									@*<div class="col-md-3 col-sm-6">
										<div class="form-group">
											@Html.EditorFor(m => m.MinRange, new { htmlAttributes = new { @class = "form-control", placeholder = "000", @type = "number" } })
											<label for="input" class="control-label">Investment Range (Min)*</label>
											<i class="bar"></i>
											<div class="error" id=""></div>
										</div>
									</div>
									<div class="col-md-3 col-sm-6">
										<div class="form-group">
											@Html.EditorFor(m => m.MaxRange, new { htmlAttributes = new { @class = "form-control", placeholder = "000", @type = "number" } })
