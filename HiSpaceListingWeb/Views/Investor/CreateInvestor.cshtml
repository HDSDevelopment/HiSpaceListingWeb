						<h2>Investor Form</h2>
					</div>
					<div class="card hi-card">
						<div class="card-body">
							@*<form class="form-row align-items-center md-form p-3" action="account-profile.html">*@
							@using (Html.BeginForm("Create", "Investor", FormMethod.Post, new { @class = "md-form p-3 mb-form__investor", enctype = "multipart/form-data", id = "investorCreate", onSubmit = "investorCreateValidate(event)" }))
