											<span class="mb-3 price-lable">Amount Range</span>
											<div class="col-sm-12">
												<div id="slider-range__investor"></div>
											</div>
										</div>
										<div class="row slider-labels">
											<div class="col-6 caption">
												<strong>Min:</strong> <span id="investor-value1"></span>
											</div>
											<div class="col-6 text-right caption">
												<strong>Max:</strong> <span id="investor-value2"></span>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-12">
												@Html.HiddenFor(m => m.MinRange)
												@Html.HiddenFor(m => m.MaxRange)
											</div>
										</div>
									</div>


									<div class="form-group col-md-3 col-sm-6">
										<select class="form-control basic-select" id="During" name="During">
											<option value="">--Select Type--</option>
											<option value="Immediate">Immediate</option>
											<option value="1 Month">In 1 Month</option>
											<option value="6 Months">In 6 Months</option>
										</select>
										<label for="select" class="control-label">Looking to invest during*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>
								</div>

								<p class="row">Investor's Preferred Location</p>
								<div class="row">
									<div class="form-group col-md-3 col-sm-6">
										<select name="Country" class="form-control basic-select countries order-alpha include-BD-IN-KE-NP-LK-AE" id="countryId">
											<option value="">--Select Country--</option>
										</select>
										<label for="select" class="control-label">Country*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>

									<div class="form-group col-md-3 col-sm-6">
										<select name="State" class="form-control basic-select states order-alpha" id="stateId">
											<option value="">--Select State--</option>
										</select>
										<label for="select" class="control-label">State*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>

									<div class="form-group col-md-3 col-sm-6">
										<select name="District" class="form-control basic-select cities order-alpha" id="cityId">
											<option value="">--Select City--</option>
										</select>
										<label for="select" class="control-label">District/City*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>
									@*<div class="form-group col-md-3 col-sm-6">
										<select class="form-control basic-select" id="Country" name="Country">
											<option value="Country 1">Country 1</option>
											<option value="Country 2">Country 2</option>
										</select>
										<label for="select" class="control-label">Country*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>

									<div class="form-group col-md-3 col-sm-6">
										<select class="form-control basic-select" id="State" name="State">
											<option value="State 1">State 1</option>
											<option value="State 2">State 2</option>
										</select>
										<label for="select" class="control-label">State*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>

									<div class="form-group col-md-3 col-sm-6">
										<select class="form-control basic-select" id="District" name="District">
											<option value="District 1">District 1</option>
											<option value="District 2">District 2</option>
										</select>
										<label for="select" class="control-label">District/City*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>*@

									<div class="form-group col-md-3 col-sm-6">
										@Html.EditorFor(m => m.Neighborhood, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Nearest Area" } })
										<label for="input" class="control-label">Neighborhood*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>
								</div>

								<p class="row">Any Other Comments</p>
								<div class="row">
									<div class="form-group col-md-12 col-sm-12">
										@Html.TextAreaFor(m => m.Comment, new { @class = "form-control", placeholder = "Enter your Comments", @rows = 5 })
										<label for="input" class="control-label">Comments*</label><i class="bar"></i>
										<div class="error" id=""></div>
									</div>
								</div>

								<div class="row">
									<div class="col-sm-12 mt-3 text-center">
										<button type="submit" class="btn btn-sec">Submit</button>
									</div>
								</div>
								@*</form>*@
							}
						</div>
					</div>
				</div>

			</div>
			<!-- .row end -->


		</div>
		<!-- .container end -->
	</section>
</div>

