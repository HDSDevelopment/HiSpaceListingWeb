										<div class="error" id=""></div>
									</div>
									<div class="form-group col-md-3 col-sm-6">
										@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Email", @type = "email" } })
